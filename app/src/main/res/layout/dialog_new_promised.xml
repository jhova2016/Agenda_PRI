<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:id="@+id/card"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="6dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/Transparente"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ColorTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGris"


        >
        <LinearLayout
            android:id="@+id/ColorTarjetaCabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/ColorProposed"



            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/localidad"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localidad"
                android:textColor="@color/colorBlanco"
                android:textSize="18dp"
                android:gravity="center_vertical"


                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"


                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/fecha" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha"
                    android:textColorHint="@color/color1"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorNegro"
                        android:textColorHint="@color/color1"
                        android:textSize="14dp" />
                </com.google.android.material.textfield.TextInputLayout>




            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:id="@+id/ColorTipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >





            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lugar"
                android:textColorHint="@color/color1"
                android:layout_weight="1"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorNegro"
                    android:textColorHint="@color/color1"
                    android:textSize="14dp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Informacion"
                android:textColorHint="@color/color1"
                android:layout_weight="1"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorNegro"
                    android:textColorHint="@color/color1"
                    android:textSize="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="promesa"
                android:textColor="@color/colorGris2"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/colorBlanco"


                >
                <EditText
                    android:id="@+id/editTextPromised"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:textColor="@color/colorNegro"
                    android:hint="promesa" />



            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center"


            >

            <Button
                android:id="@+id/BtnCancelDialogNewPromised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:backgroundTint="@color/colorBlanco"
                android:textColor="@color/color2"


                />

            <Button
                android:id="@+id/BtnAcceptDialogPromised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:backgroundTint="@color/color2"
                android:textColor="@color/colorBlanco"


                />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>