<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    app:cardCornerRadius="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGris2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/colorBlanco"
            android:text="versión 1.3.0"
            android:textSize="5dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_logo_blanco"

            android:layout_margin="8dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorPublico1"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:textColor="@color/colorBlanco"
                android:text="Evento Público"
                android:textSize="18dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/color3"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:textColor="@color/colorBlanco"
                android:text="Evento Privado"
                android:textSize="18dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/color1"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:textColor="@color/colorBlanco"
                android:text="Evento Tentador"
                android:textSize="18dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:weightSum="2"


            >

            <Button
                android:id="@+id/BtnPeticiones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Peticiones"
                android:backgroundTint="@color/cabecera"
                android:textColor="@color/colorBlanco"

                />

            <Button
                android:id="@+id/BtnOpcionesDialog2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cerrar sesion"
                android:backgroundTint="@color/cabecera"
                android:textColor="@color/colorBlanco"

                />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>