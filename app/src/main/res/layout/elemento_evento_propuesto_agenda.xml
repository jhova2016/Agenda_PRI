<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:id="@+id/card"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/Transparente"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ColorTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ColorTentador"


        >
        <LinearLayout
            android:id="@+id/ColorTarjetaCabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"




            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/localidad"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/Localidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localidad"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"


                />







        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginLeft="12dp"



                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/fecha" />

                <TextView
                    android:id="@+id/Fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlanco"
                    android:gravity="center_vertical"



                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                android:gravity="bottom"

                >


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/hora" />

                <TextView
                    android:id="@+id/HoraInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlanco"
                    android:gravity="center_vertical"



                    />


                <TextView
                    android:id="@+id/HoraFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textSize="10dp"
                    android:textColor="@color/ColorPromises4"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6dp"

                    />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ColorTipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lugar"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>



            <TextView
                android:id="@+id/Lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lugar"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/Informacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsable"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"

                >

                <TextView
                    android:id="@+id/Responsable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Responsable"
                    android:textColor="@color/colorBlanco"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"

                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/TipoDeEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"

                    android:layout_marginRight="12dp"

                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/colorBlanco"
                    android:textSize="14dp"


                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de calendarizacion"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/FechaDeCalendarizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de calendarizacion"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"

                android:layout_weight="1"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vestimenta"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/Vestimenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vestimenta"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quien agendo"
                android:textColor="@color/ColorPromises4"
                android:textSize="9dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/QuienCalendarizo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quien calendarizo"
                android:textColor="@color/colorBlanco"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"

                />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>