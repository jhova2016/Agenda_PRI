<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:backgroundTint="@color/colorBlanco"
    app:cardCornerRadius="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cabecera"
        >

    <LinearLayout
        android:id="@+id/btnMasInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/LocalidadDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"

            android:gravity="left"
            android:textColor="@color/colorBlanco"
            android:text="Localidad"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/ImgBorrar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/eliminar"

            />

        <ImageView
            android:id="@+id/ImgEditar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/editar"

             />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:backgroundTint="@color/colorBlanco"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugar"

                android:gravity="left"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/hint"

                />
    <TextView
            android:id="@+id/LugarDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar"

            android:gravity="left"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorNegro"

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InformaciÃ³n"
                android:gravity="left"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/hint"
                />

            <TextView
                android:id="@+id/informacionDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion"

                android:gravity="left"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorNegro"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de evento"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/hint"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de evento"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/hint"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="4dp"
                >
                <TextView
                    android:id="@+id/FechaDeEventoDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de evento"

                    android:gravity="left"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    />

                <TextView
                    android:id="@+id/TipoDeEventoDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de evento"

                    android:gravity="left"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"

                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    />


            </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora de inicio"

        android:gravity="left"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginBottom="4dp"
        android:textColor="@color/hint"
        />

                <TextView
                    android:id="@+id/HoraInicioDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color1"
                    android:gravity="left"
                    android:textColor="@color/colorBlanco"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de final"

                    android:gravity="left"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/hint"
                    />

                <TextView
                    android:id="@+id/HoraFinalDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/color1"
                    android:gravity="left"
                    android:textColor="@color/colorBlanco"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsable"

                android:gravity="left"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/hint"
                />

            <TextView
                android:id="@+id/ResponsableDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsable"

                android:gravity="left"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorNegro"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vestimenta"
                android:gravity="left"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/hint"
                />

            <TextView
                android:id="@+id/VestimentaDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vestimenta"
                android:gravity="left"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorNegro"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado de evento"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/hint"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de calendarizacion"
                    android:gravity="left"
                    android:textSize="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/hint"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:id="@+id/EstadoDeEventoDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"

                    android:layout_marginRight="16dp"
                    android:gravity="left"
                    android:text="Estado de evento"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    />

                <TextView
                    android:id="@+id/FechaDeCalendarizacionDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de calendarizacion"

                    android:gravity="left"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"

                    android:layout_weight="1"
                    android:textColor="@color/colorNegro"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quien calendarizo"
                android:gravity="left"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/hint"
                />

            <TextView
                android:id="@+id/QuienCalendarizoDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quien calendarizo"

                android:gravity="left"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorNegro"
                />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:weightSum="2"
        android:gravity="center"



        >



        <Button
            android:id="@+id/BtnAceptarDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textColor="@color/cabecera"
            android:backgroundTint="@color/colorBlanco"



            />
    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>